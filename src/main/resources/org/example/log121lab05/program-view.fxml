<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox spacing="10" style="-fx-padding: 5; -fx-background-color: #f0f0f0;">
            <MenuButton text="Fichier">
                <items>
                    <MenuItem text="Sauvegarder perspective" disable="true" onAction="#onHelloButtonClick"/>
                    <MenuItem text="Charger perspective" disable="true" onAction="#onHelloButtonClick"/>
                    <MenuItem text="Charger image" onAction="#onLoadImageButtonClick"/>
                    <MenuItem text="Quitter" onAction="#onQuitButtonClick"/>
                </items>
            </MenuButton>
            <MenuButton text="Édition">
                <items>
                    <MenuItem text="Défaire" onAction="#onHelloButtonClick"/>
                    <MenuItem text="Refaire" onAction="#onHelloButtonClick"/>
                </items>
            </MenuButton>
            <MenuButton text="Presse-Papier">
                <items>
                    <MenuItem text="Copier position" onAction="#onHelloButtonClick"/>
                    <MenuItem text="Coller position" onAction="#onHelloButtonClick"/>
                    <MenuItem text="Copier zoom" onAction="#onHelloButtonClick"/>
                    <MenuItem text="Coller zoom" onAction="#onHelloButtonClick"/>
                    <MenuItem text="Copier tout" onAction="#onHelloButtonClick"/>
                    <MenuItem text="Coller tout" onAction="#onHelloButtonClick"/>
                </items>
            </MenuButton>
        </HBox>
    </top>
    <center>
        <HBox spacing="10" style="-fx-background-color: #e6e6e6; -fx-padding: 10;">
            <StackPane HBox.hgrow="ALWAYS"
                       style="-fx-border-color: blue; -fx-border-width: 2; -fx-background-color: rgba(0,0,0,0.05);">
                <ImageView fx:id="imageView1"
                           preserveRatio="true"/>
            </StackPane>
            <StackPane HBox.hgrow="ALWAYS"
                       style="-fx-border-color: blue; -fx-border-width: 2; -fx-background-color: rgba(0,0,0,0.05);">
                <ImageView fx:id="imageView2"
                           preserveRatio="true"
                           onMousePressed="#onImage1Pressed"
                           onMouseDragged="#onImageDragged"/>
            </StackPane>
            <StackPane HBox.hgrow="ALWAYS"
                       style="-fx-border-color: blue; -fx-border-width: 2; -fx-background-color: rgba(0,0,0,0.05);">
                <ImageView fx:id="imageView3"
                           preserveRatio="true"
                           onMousePressed="#onImage2Pressed"
                           onMouseDragged="#onImageDragged"/>
            </StackPane>
        </HBox>
    </center>
    <bottom>
        <HBox style="-fx-alignment: center; -fx-padding: 5;">
            <javafx.scene.control.Label text="LOG121 - E25 - LAB5" />
        </HBox>
    </bottom>
</BorderPane>
