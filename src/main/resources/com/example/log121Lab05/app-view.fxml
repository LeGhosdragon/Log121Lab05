<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox spacing="10" style="-fx-padding: 5; -fx-background-color: #f0f0f0;">
            <MenuButton text="Fichier">
                <items>
                    <MenuItem onAction="#save" text="Sauvegarder perspectives" />
                    <MenuItem onAction="#load" text="Charger perspectives" />
                    <MenuItem onAction="#loadImage" text="Charger image" />
                    <MenuItem onAction="#quit" text="Quitter" />
                </items>
            </MenuButton>
            <MenuButton text="Édition">
                <items>
                    <MenuItem onAction="#undo" text="Défaire" />
                    <MenuItem onAction="#redo" text="Refaire" />
                </items>
            </MenuButton>
            <MenuButton text="Presse-Papier">
                <items>
                    <MenuItem onAction="#copyPosition" text="Copier position" />
                    <MenuItem onAction="#copyZoom" text="Copier zoom" />
                    <MenuItem onAction="#copyAll" text="Copier tout" />
                    <MenuItem onAction="#paste" text="Coller" />
                </items>
            </MenuButton>
        </HBox>
    </top>
    <center>
        <HBox spacing="10" style="-fx-background-color: #e6e6e6; -fx-padding: 10;">
            <StackPane maxHeight="600" maxWidth="413" minHeight="600" minWidth="413" prefHeight="600" prefWidth="413" style="-fx-border-color: blue; -fx-border-width: 2; -fx-background-color: rgba(0,0,0,0.05);">
                <ImageView fx:id="imageView1" fitHeight="600" fitWidth="413" preserveRatio="true"/>
            </StackPane>
            <StackPane fx:id="pane1" maxHeight="600" maxWidth="413" minHeight="600" minWidth="413" onMousePressed="#onPerspective1Clicked" prefHeight="600" prefWidth="413" style="-fx-border-color: blue; -fx-border-width: 2; -fx-background-color: rgba(0,0,0,0.05);">
                <ImageView fx:id="imageView2" fitHeight="600" fitWidth="413" onMouseDragged="#onImageDragged" onMousePressed="#onPerspective1Clicked" preserveRatio="true">

                </ImageView>
            </StackPane>
            <StackPane fx:id="pane2" maxHeight="600" maxWidth="413" minHeight="600" minWidth="413" prefHeight="600" prefWidth="413" style="-fx-border-color: blue; -fx-border-width: 2; -fx-background-color: rgba(0,0,0,0.05);">
                <ImageView fx:id="imageView3" fitHeight="600" fitWidth="413" onMouseDragged="#onImageDragged" onMousePressed="#onPerspective2Clicked"  preserveRatio="true"/>
            </StackPane>

        </HBox>
    </center>
    <bottom>
        <HBox style="-fx-alignment: center; -fx-padding: 5;">
            <Label text="LOG121 - E25 - LAB5" />
        </HBox>
    </bottom>
</BorderPane>
